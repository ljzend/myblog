<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljz.myblog_admin.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ljz.myblog_admin.pojo.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar" property="avatar"/>
        <result column="gender" property="gender"/>
        <result column="password" property="password"/>
        <result column="enable" property="enable"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, nickname, avatar, gender, password, enable, email, phone, create_time, modify_time, deleted
    </sql>
    <select id="getRoles" resultType="com.ljz.myblog_admin.pojo.Role" parameterType="java.lang.Long">
        SELECT r.id,
               r.name,
               r.description,
               r.create_time,
               r.modify_time,
               r.deleted
        FROM t_role r
                 LEFT JOIN t_role_user ru ON ru.role_id = r.id
        WHERE ru.user_id = #{id}
    </select>

</mapper>
